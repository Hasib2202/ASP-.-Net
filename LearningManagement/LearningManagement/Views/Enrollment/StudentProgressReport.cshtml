}

@*<h2>StudentProgressReport</h2>*@

@model List<LearningManagement.DTOs.StudentProgressDTO>

<div class="container">
    <h2>Student Progress Report</h2>

    <a href="@Url.Action("ExportProgressReport")" class="btn btn-success mb-3">
        Export to CSV
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Student</th>
                <th>Course</th>
                <th>Progress</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var progress in Model)
            {
                <tr>
                    <td>@progress.StudentName</td>
                    <td>@progress.CourseName</td>
                    <td>@progress.Progress%</td>
                </tr>
            }
        </tbody>
    </table>
</div>