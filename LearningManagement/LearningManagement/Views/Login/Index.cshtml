        <div class="alert alert-success text-center mt-3">
            @TempData["logout"]
        </div>
    }*@

@if (!string.IsNullOrEmpty(ViewBag.LogoutMessage as string))
{
    <div class="alert alert-success">
        @ViewBag.LogoutMessage
    </div>
}



<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 80%; max-width: 350px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Login</h3>
            <form method="post">
                <div class="container my-3 p-3 border-1">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- Use ViewBag to retain the entered email -->
                        <input type="email" name="Email" id="email" class="form-control w-100" placeholder="Enter your email" value="@ViewBag.Email" />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <!-- Use ViewBag to retain the entered password -->
                        <input type="password" name="Password" id="password" class="form-control w-100" placeholder="Enter your password" value="@ViewBag.Password" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" style="width: 40%;">Login</button>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-danger text-center mt-3">
                            @TempData["msg"]
                        </div>
                    }
                    @if (TempData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success text-center mt-3">
                            @TempData["SuccessMsg"]
                        </div>
                    }

                    @*@if (TempData["logout"] != null)
                        {
                            <div class="alert alert-success text-center mt-3">
                                @TempData["logout"]
                            </div>
                        }*@


                    <div class="text-center mt-3">
                        <a href="/Register/Index" class="text-decoration-none">Don't have any account'?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS (optional) for additional functionality -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
