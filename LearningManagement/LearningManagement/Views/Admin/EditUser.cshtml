
@{
    ViewBag.Title = "Edit User";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 80%; max-width: 350px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Edit User</h3>
            <form method="post" action="@Url.Action("EditUser", "Admin")">
                <div class="container my-3 p-3 border-1">
                    @*@Html.HiddenFor(m => m.UserId)*@
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" name="Name" id="Name" class="form-control w-100"
                               placeholder="Enter name" value="@Model.Name" />
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" name="Email" id="Email" class="form-control w-100"
                               placeholder="Enter email" value="@Model.Email" />
                    </div>

                    <div class="mb-3">
                        <label for="Role" class="form-label">Role</label>
                        <select id="Role" name="Role" class="form-control">
                            <option value="">Select Role</option>
                            <option value="Admin" @(Model.Role == "Admin" ? "selected" : "")>Admin</option>
                            <option value="Student" @(Model.Role == "Student" ? "selected" : "")>Student</option>
                            <option value="Instructor" @(Model.Role == "Instructor" ? "selected" : "")>Instructor</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <button type="submit" class="btn btn-primary" style="width: 40%;">Update</button>
                        <a href="@Url.Action("ListUsers", "Admin")" class="btn btn-secondary" style="width: 40%;">Cancel</a>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-danger text-center mt-3">
                            @TempData["msg"]
                        </div>
                    }

                    @if (TempData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success text-center mt-3">
                            @TempData["SuccessMsg"]
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>