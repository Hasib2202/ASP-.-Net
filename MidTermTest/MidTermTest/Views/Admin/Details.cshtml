
@{
    ViewBag.Title = "Details";
}



﻿
<!DOCTYPE html>
<html>
<head>
    <title>Contact Details</title>
    <link rel="stylesheet" href="/Content/Site.css" />
</head>
<body>
    @if (TempData["msg"] != null)
    {
        <div class="alert">
            @TempData["msg"]
        </div>
    }

    <h1>Contact Details</h1>

    @if (Model != null)
    {
        <table border="1">
            <tr>
                <th>Id:</th>
                <td>@Model.UserId</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone:</th>
                <td>@Model.Role</td>
            </tr>
        </table>
    }
    else
    {
        <p>User details are not available.</p>
    }

    <br />

    <!-- Back to Contact List Button -->
    <a href="/Admin/ListUsers">Back to User List</a>
</body>
</html>