@{
    ViewBag.Title = "ListUsers";
}

@*<h2>ListUsers</h2>*@

<div class="container">
    <h2>Users Management</h2>

    @*@if (TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMsg"]</div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger">@TempData["msg"]</div>
    }*@

    <a href="@Url.Action("CreateUser")" class="btn btn-success mb-3">Create New User</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm">
                            Edit
                        </a>
                                
                        <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>
                        <a href="@Url.Action("Details", "Admin", new { id = user.UserId })"
                           class="btn btn-info btn-sm">
                            Details
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>