<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 80%; max-width: 350px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Create</h3>
            <form method="post">
                <div class="container my-3 p-3 border-1">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <!-- Use ViewBag to retain the entered name -->
                        <input type="text" name="Name" id="Name" class="form-control w-100" placeholder="Enter your name" value="@ViewBag.Name" />
                        <span class="text-danger">@Html.ValidationMessage("Name")</span> <br />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- Use ViewBag to retain the entered email -->
                        <input type="email" name="Email" id="email" class="form-control w-100" placeholder="Enter your email" value="@ViewBag.Email" />
                        <span class="text-danger">@Html.ValidationMessage("Email")</span> <br />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <!-- Use ViewBag to retain the entered password -->
                        <input type="password" name="Password" id="password" class="form-control w-100" placeholder="Enter your password" value="@ViewBag.Password" />
                        <span class="text-danger">@Html.ValidationMessage("Password")</span> <br />
                    </div>


