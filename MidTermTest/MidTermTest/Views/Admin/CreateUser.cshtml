                    <div class="mb-3">
                        <label for="Role" class="form-label">Role</label>
                        <select id="Role" name="Role" class="form-control"  value="@ViewBag.Role">
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Member">Member</option>
                            <option value="Staff">Staff</option>

                            @*<option value="Instructor">Instructor</option>*@
                        </select>
                        <span class="text-danger">@Html.ValidationMessage("Role")</span> <br />
                    </div>


                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" style="width: 40%;">Create</button>
                    </div>

                    @*@if (TempData["msg"] != null)
                        {
                            <div class="alert alert-danger text-center mt-3">
                                @TempData["msg"]
                            </div>
                        }*@
                    <div class="text-center mt-3">
                        <a href="/Admin/ListUsers" class="text-decoration-none">Back?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

