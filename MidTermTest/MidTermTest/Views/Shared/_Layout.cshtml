@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership Management - @ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">
                <i class="fas fa-address-book"></i> Admin Dashboard
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListUsers", "Admin")">
                            <i class="fas fa-users"></i> All Users
                        </a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="/Note/Indexx">
                            <i class="fas fa"></i> view 1
                        </a>
                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="/Register/Index">
                            @*<i class="fas fa-sticky-note"></i> Register*@
                            <i class="fas fa-address-card"></i> Register
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/Index">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (Session["info"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Login")">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["msg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["SuccessMsg"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMsg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">© @DateTime.Now.Year - Membership Management System</span>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>