@{
    ViewBag.Title = "Delete";
}


<h2>Delete Student</h2>
<p class="text-danger">Are you sure you want to delete the student with the following details?</p>

<div>
    <p><strong>Name:</strong> @Model.name</p>
    <p><strong>CGPA:</strong> @Model.cgpa</p>
</div>

<form method="post">
    <input type="hidden" name="Id" value="@Model.id" />
    <input type="submit" value="Yes" class="btn btn-danger" name="dcsn" />
    <input type="submit" value="No" class="btn btn-warning" name="dcsn" />
    @*<a href="@Url.Action("List", "Student")" class="btn btn-secondary">No</a>*@
</form>