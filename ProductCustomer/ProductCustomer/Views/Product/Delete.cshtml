
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.name</h5>
        <p class="card-text"><strong>Description:</strong> @Model.description</p>
        <p class="card-text"><strong>Price:</strong> $@Model.price</p>
        <p class="card-text"><strong>Stock Quantity:</strong> @Model.stock_quantity</p>
        <p class="card-text"><strong>Category:</strong> @Model.category</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="id" />
    <input type="submit" value="Yes" class="btn btn-danger" name="dcsn" />
    <input type="submit" value="No" class="btn btn-warning" name="dcsn" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
