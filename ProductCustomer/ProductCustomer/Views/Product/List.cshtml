
@{
    ViewBag.Title = "List";
}


<h2>Product List</h2>
<hr />
<a href="/Product/Create/" class="btn btn-danger btn-sm">Create</a>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.id</td>
                <td>@product.name</td>
                <td>@product.description</td>
                <td>@product.price</td>
                <td>@product.stock_quantity</td>
                <td>@product.category</td>
                <td>
                    <a href="/Product/Details/@product.id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Product/Edit/@product.id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Product/Delete/@product.id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>