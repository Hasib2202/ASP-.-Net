@model TRPManagement.DTOs.ChannelDTO
<!DOCTYPE html>
<html>
<head>
    <title>Delete Channel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Delete Channel</h2>

        <div class="alert alert-warning">
            Are you sure you want to delete this channel?
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Channel Details</h5>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Channel ID:</strong> @Model.ChannelId</p>
                        <p><strong>Channel Name:</strong> @Model.ChannelName</p>
                        <p><strong>Established Year:</strong> @Model.EstablishedYear</p>
                        <p><strong>Country:</strong> @Model.Country</p>
                    </div>
                </div>

                <form action="/Channel/Delete/@Model.ChannelId" method="post">
                    <input type="hidden" name="id" value="@Model.ChannelId" />
                    <button type="submit" name="dcsn" value="Yes" class="btn btn-danger">Confirm Delete</button>
                    <a href="/Channel/List" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>