@model TRPManagement.DTOs.ProgramDTO
<!DOCTYPE html>
<html>
<head>
    <title>Create Channel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Create New Program</h2>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
        }

        <form action="/Program/Create" method="post">
            <div class="form-group">
                <label for="ChannelName">Program Name</label>
                <input type="text" class="form-control" id="ProgramName" name="ProgramName"
                       value="@Model.ProgramName" maxlength="100" />
                @Html.ValidationMessageFor(model => model.ProgramName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="TRPScore">TRP Score</label>
                <input type="number" step="0.1" id="TRPScore" name="TRPScore" class="form-control" value="@Model.TRPScore" />
                <span class="text-danger">@Html.ValidationMessage("TRPScore")</span>

            </div>
            <div class="form-group">
                <label for="ChannelId">Channel</label>
                <select id="ChannelId" name="ChannelId" class="form-control">
                    <option value="">Select a channel</option>
                    @foreach (var item in (SelectList)ViewBag.Channels)
                    {
                        <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("ChannelId")</span>

            </div>

            <div class="form-group">
                <label for="AirTime ">AirTime </label>
                <input type="time" class="form-control" id="AirTime" name="AirTime"
                       value="@Model.AirTime" />
                @Html.ValidationMessageFor(model => model.AirTime, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Create Program</button>
            <a href="/Program/List" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</body>
</html>
