@model TRPManagement.DTOs.ProgramDTO
<!DOCTYPE html>
<html>
<head>
    <title>Delete Channel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Delete Program</h2>

        <div class="alert alert-warning">
            Are you sure you want to delete this program?
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Channel Details</h5>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Program ID:</strong> @Model.ProgramId</p>
                        <p><strong>Program Name:</strong> @Model.ProgramName</p>
                        <p><strong>Channel Name:</strong> @Model.ChannelId</p>
                        <p><strong>TRP Score:</strong> @Model.TRPScore</p>
                        <p><strong>Air time:</strong> @Model.AirTime</p>
                    </div>
                </div>

                <form action="/Program/Delete/@Model.ProgramId" method="post">
                    <input type="hidden" name="id" value="@Model.ProgramId" />
                    <button type="submit" name="dcsn" value="Yes" class="btn btn-danger">Confirm Delete</button>
                    <a href="/Program/List" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>