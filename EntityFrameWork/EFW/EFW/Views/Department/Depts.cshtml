
@{
    ViewBag.Title = "Depts";
}

@if (Model.Count == 0)
{
    <h1>No data found</h1>
}
else
{
    <h2>Depts</h2>
    <div>
        <a class="btn btn-info" href="@Url.Action("Create", "Department")">Create</a>
        <a class="btn btn-dark" href="@Url.Action("All", "University")">Universities</a>
    </div>
    <div class="container border bg-primary text-white my-3 p-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Action</th>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.id</td>
                        <td>@dept.name</td>
                        <td>@dept.location</td>
                        <td>
                            <a href="@Url.Action("Details", "Department", new { id = dept.id })" class="btn btn-info">Details</a>
                            <a href="@Url.Action("Edit", "Department", new { id = dept.id })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "Department", new { id = dept.id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
        </table>
    </div>
}

