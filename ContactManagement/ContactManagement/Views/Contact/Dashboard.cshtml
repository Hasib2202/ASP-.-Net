@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-md-12 mb-4">
        <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Contacts</h5>
                        <h2 class="mb-0">@ViewBag.TotalContacts</h2>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-primary border-0">
                <a href="@Url.Action("Index")" class="text-white text-decoration-none">
                    View All Contacts <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Notes</h5>
                        <h2 class="mb-0">@ViewBag.TotalNotes</h2>
                    </div>
                    <i class="fas fa-sticky-note fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-success border-0">
                <span class="text-white">Contact Notes</span>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div>
                    <h5 class="card-title">Contacts by Category</h5>
                    @foreach (var category in ViewBag.ContactsByCategory)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@category.Key</span>
                            <span class="badge bg-white text-info">@category.Value</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="@Url.Action("Create")" class="btn btn-primary w-100">
                            <i class="fas fa-plus-circle"></i> Add New Contact
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", new { category = "Family" })" class="btn btn-outline-primary w-100">
                            <i class="fas fa-home"></i> View Family Contacts
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", new { category = "Work" })" class="btn btn-outline-primary w-100">
                            <i class="fas fa-briefcase"></i> View Work Contacts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>