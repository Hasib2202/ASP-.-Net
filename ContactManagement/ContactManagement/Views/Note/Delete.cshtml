


@model ContactManagement.DTOs.AddNoteDTO

@{
    ViewBag.Title = "Delete Note";
}

<h2>Delete Note</h2>

<p>Are you sure you want to delete this note?</p>

<div class="well">
    <p><strong>Note Content:</strong> @Html.DisplayFor(model => model.Content)</p>
    <p><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>
</div>

@using (Html.BeginForm("Delete", "Note", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.NoteId)
    @Html.HiddenFor(model => model.ContactId)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Contact", new { id = Model.ContactId })" class="btn btn-secondary">Cancel</a>
}
