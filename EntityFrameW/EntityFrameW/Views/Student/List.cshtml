﻿
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<br />
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
<a class="btn btn-danger" href="/student/create">Create</a>
@if (Model.Count == 0)
{
    <h3>No Data Found</h3>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cgpa</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.cgpa</td>
            </tr>
        }

    </table>


}